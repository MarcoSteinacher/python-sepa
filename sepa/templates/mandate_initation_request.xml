<%include file="util.xml"/>

<Document xmlns="urn:iso:std:iso:20022:tech:xsd:pain.009.001.04" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <MndtInitnReq>
        <GrpHdr>
            <MsgId>${message_id}</MsgId>
            <CreDtTm>${creation_datetime}</CreDtTm>
            <%self:multiple data="${authorisation}" args="element">
                <Authstn>${element}</Authstn>
            </%self:multiple>
            <%self:optional data="${initiating_party}">
                <InitgPty>${initiating_party}</InitgPty>
            </%self:optional>
            <%self:optional data="${instructing_party}">
                <InstgAgt>${instructing_party}</InstgAgt>
            </%self:optional>
            <%self:optional data="${instructed_party}">
                <InstdAgt>${instructed_party}</InitgPty>
            </%self:optional>
        </GrpHdr>
        <%self:multiple data="${mandates}" args="element">
            <Mndt>
                <MndtId>${element.id}</MndtId>
                <MndtReqId>${element.request_id}</MndtReqId>
            </Mndt>
        <%self:multiple data="${mandates}" args="element">
    </MndtInitnReq>
</Document>
